<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:layout_width="match_parent">
    <TextView
            android:text="Time: 15"
            android:layout_width="120dp"
            android:layout_height="60dp" android:id="@+id/timerTextView"
            android:gravity="center" android:textSize="24sp"
            android:layout_marginTop="32dp" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toEndOf="@+id/puanTextView" app:layout_constraintBottom_toTopOf="@+id/puanTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/puanTextView"/>
    <TextView
            android:text="Skor: 0"
            android:layout_width="139dp"
            android:layout_height="47dp" android:id="@+id/puanTextView"
            android:gravity="center" android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/gridLayout"
            android:layout_marginStart="65dp" app:layout_constraintTop_toBottomOf="@+id/timerTextView"
            android:layout_marginBottom="57dp" app:layout_constraintBottom_toTopOf="@+id/gridLayout"/>

    <GridLayout
            android:layout_width="301dp" android:layout_height="0dp"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/puanTextView" android:layout_marginBottom="71dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="45dp">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView1"
                android:layout_column="0"
                android:layout_row="0"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView2"
                android:layout_column="1"
                android:layout_row="0"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView3"
                android:layout_column="2"
                android:layout_row="0"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView4"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView5"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView6"
                android:layout_column="2"
                android:layout_row="1"
                android:onClick="increaseScore"
        />

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView7"
                android:layout_column="0"
                android:layout_row="3"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView8"
                android:layout_column="1"
                android:layout_row="3"
                android:onClick="increaseScore"
        />
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/kenny"
                android:id="@+id/imageView9"
                android:layout_column="2"
                android:layout_row="3"
                android:onClick="increaseScore"
        />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>